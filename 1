#include "../header/cube3d.h"

int	ft_openMap(t_data *data, char *path)
{
	int	fd;

	if (path)
		fd = open(path, O_RDONLY);
	else
		fr = open("map/test.cub", O_RDONLY);
	if (fd == -1)
	{
		perror("Could not access map file\n");
		exit(1);
	}
	data->x = data->x;
	close(fd);
}
